<!-- Fixed navbar menu -->
<div class="ui secondary menu">
    <a class="toc item">
      <i class="sidebar icon"></i>
    </a>
    <div class="ui follow-menu images">
      <img class= "ui medium image" src="/assets/pedalspace_logo_follow_menu.png" />
    <a class="active item">
      Home
    </a>
    <a class="item">
      Messages
    </a>
    <a class="item">
      Friends
    </a>
  </div>
  <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <input type="text" placeholder="Search...">
        <i class="search link icon"></i>
      </div>
    </div>
    <% if (!user_signed_in?) %>
      <a>
        <%= link_to "Log in", new_user_session_path, :class =>'item' %>
      </a>
      <a class="item">
        <%= link_to "Sign up", new_user_registration_path, :class =>'item' %>
      </a>
    <% else %>
      <a>
        <%= link_to "Log out", destroy_user_session_path, :class =>'item', :method => :delete %>
      </a>
      <a>
        <%= link_to "Edit Profile", edit_user_registration_path, :class =>'item' %>
      </a>
    <% end %>
  </div>
</div>