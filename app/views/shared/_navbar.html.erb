<!-- Fixed navbar menu -->
<div class="ui secondary menu">
    <a class="toc item">
      <i class="sidebar icon"></i>
    </a>
    <div class="ui follow-menu images">
      <a>
        <%= link_to pages_home_path do %>
          <img class= "ui medium image" src="/assets/pedalspace_logo_follow_menu.png" />
        <% end %>
      </a>
    <a class="active item">
      Home
    </a>
    <a class="item">
      Messages
    </a>
    <a class="item">
      Friends
    </a>
  </div>
  <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <%= form_tag(pages_home_path, method: :get, class: "ui icon input" ) do %>
          <%= text_field_tag("service", "", {placeholder: "Search...", class: "prompt"}) %>
          <%= submit_tag("", {style: "display: none;"}) do %>
          <% end %>
          <i class="search icon"></i>
        <% end %>
      </div>
    </div>
    <% if (!user_signed_in?) %>
      <a>
        <%= link_to "Log in", new_user_session_path, :class =>'item' %>
      </a>
      <a class="item">
        <%= link_to "Sign up", new_user_registration_path, :class =>'item' %>
      </a>
    <% else %>
      <a>
        <%= link_to "Log out", destroy_user_session_path, :class =>'item', :method => :delete %>
      </a>
      <a>
        <% if current_user.is_a?(Mechanic) %>
          <%= link_to "Edit Profile", edit_mechanic_path(current_user.id), :class =>'item' %>
        <% elsif current_user.is_a?(Cyclist) %>
          <%= link_to "Edit Profile", edit_cyclist_path(current_user.id), :class =>'item' %>
        <% end %>
      </a>
    <% end %>
  </div>
</div>
