<h1>Mechanics#show</h1>
<p>Find me in app/views/mechanics/show.html.erb</p>

<hr />

<h3><%= "#{@mechanic.first_name} #{@mechanic.last_name}" %></h3>
<p><%= "Profile: #{@mechanic.bio}" %></p>
<p><%= "Average rating: #{@mechanic.avg_rating}" %></p>

<h4>Services offered:</h4>
<% @mechanic.services.each do |service| %>
  <p><%= "Service: #{service.service_name} | Price: $#{service.service_price}" %></p>
<% end %>

<h4>Reviews received from cyclists:</h4>
<% @mechanic.review_of_mechanics.each do |review| %>
  <p><strong>Review</strong></p>
  <p><%= "Rating: #{review.rating}" %></p>
  <p><%= "Provided expected service: #{review.service_expected}" %></p>
  <p><%= "Charged expected price: #{review.price_expected}" %></p>
  <p><%= "Comments: #{review.comments}" %></p>
<% end %>

<h4>Reviews written about cyclists:</h4>
<% @mechanic.review_of_cyclists.each do |review| %>
  <p><strong>Review</strong></p>
  <p><%= "Review of #{review.cyclist.first_name} #{review.cyclist.last_name}" %></p>
  <p><%= "Rating: #{review.rating}" %></p>
  <p><%= "Paid the price agreed to: #{review.did_pay}" %></p>
  <p><%= "Comments: #{review.comments}" %></p>
<% end %>
