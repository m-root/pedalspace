<% content_for :header do -%>
  <%# The precompile initalizer is found in `config/initializers/assets.rb` %>
  <%= stylesheet_link_tag 'forms' %>
<% end %>


<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img class="ui image" src="/assets/pedalspace_colour_icon.png" >
      <div class="content">
        Sign up for Pedalspace
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form" }) do |f| %>
    <%= devise_error_messages! %>
    <%# FYI: For embedded ruby, the form for needs html: { class: } in order to apply classes to the form %>
      <div class="ui stacked segment">
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.text_field :first_name, autofocus: true, placeholder: "Please enter your first name." %>
              </div>
          </div>
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.text_field :last_name, placeholder: "Please enter your last name." %>
              </div>
          </div>          
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.email_field :email, placeholder: "Please enter your email." %>
              </div>
          </div>
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.text_field :bio, placeholder: "Please tell us something about you." %>
              </div>
          </div>
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.file_field :photo, placeholder: "Please upload your photograph." %>
              </div>
          </div>
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.text_field :street_address, placeholder: "Please enter your street address." %>
              </div>
          </div>
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.text_field :city, placeholder: "Please enter your city." %>
              </div>
          </div>
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.text_field :postal_code, placeholder: "Please enter your postal code." %>
              </div>
          </div>         
        <div class="field">      
            <div class="ui left icon input">
                  <i class="lock icon"></i>
                      <%= f.password_field :password, autocomplete: "off", placeholder: "Choose a password (#{@minimum_password_length} characters minimum)" %>
             </div>
        </div>
        <div class="field">      
                <div class="ui left icon input">
                      <i class="check circle outline icon"></i>
                      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Please confirm your password" %>
                </div>
        </div>
        <div class="ui form">
          <div class="grouped fields">
            <div class="field">
              <div class="ui slider checkbox">
                <%= f.radio_button(:type, "Cyclist", checked: true) %>
                <%= f.label("I'm looking for a Pedalspace mechanic.") %>
              </div>
            </div>
            <div class="field">
              <div class="ui slider checkbox">
                <%= f.radio_button(:type, "Mechanic") %>
                <%= f.label("I'm a mechanic looking to set up a Pedalspace.") %>
              </div>
            </div> 
          </div>
        </div>
      
       <div>
          <%= button_tag( :class => "ui fluid large teal submit button") do %>
            <i class="add icon"></i>  Sign Up 
          <% end %>
       </div>
    </div>

      <div class="ui error message"></div>
      <% end %>

    <div class="ui message">
      Already have an account? <a href='/users/sign_in'>Log In</a>
    </div>
  </div>
</div>
