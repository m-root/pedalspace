<% content_for :header do -%>
  <%# The precompile initalizer is found in `config/initializers/assets.rb` %>
  <%= stylesheet_link_tag 'forms' %>
<% end %>


<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img class="ui image" src="/assets/pedalspace_colour_icon.png" >
      <div class="content">
        Log in to Pedalspace
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form" }) do |f| %>
    <%= devise_error_messages! %>
    <%# FYI: For embedded ruby, the form for needs html: { class: } in order to apply classes to the form %>
      <div class="ui stacked segment">
          <div class="field">
              <div class="ui left icon input">
                  <i class="user icon"></i>
                      <%= f.email_field :email, autofocus: true, placeholder: "Please enter your email" %>
              </div>
          </div>

        <div class="field">      
            <div class="ui left icon input">
                  <i class="lock icon"></i>
                      <%= f.password_field :password, autocomplete: "off", placeholder: "Choose a password (#{@minimum_password_length} characters minimum)" %>
             </div>
        </div>
        <div class="field">      
                <div class="ui left icon input">
                      <i class="lock icon"></i>
                      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Please confirm your password" %>
                </div>
        </div>

        <div class="ui card fill">
              <div class="ui toggle checkbox choice-card">
                <input type="checkbox" name="public">
                <label>I'm looking for a Pedalspace mechanic</label>
              </div>

              <div class="ui toggle checkbox choice-card">
                <input type="checkbox" name="public">
                <label>I'm a mechanic looking to set up a Pedalspace</label>
              </div>
        </div>
      
       <div class="ui fluid large teal submit button">Sign up</div>
    </div>

      <div class="ui error message"></div>
      <% end %>

    <div class="ui message">
      New to us? <a href="#">Sign Up</a>
    </div>
  </div>
</div>
