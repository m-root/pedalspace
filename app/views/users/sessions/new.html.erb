
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img class="ui image" src="/assets/pedalspace_colour_icon.png" >
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui large form'}) do |f| %>
    <!-- <form class="ui large form"> -->
      <div class="ui stacked segment">
        <div>
          <div class="ui left icon input">
            <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: "E-mail", :class =>'field' %>
           <!--  <input type="text" name="email" placeholder="E-mail address"> -->
          </div>
        </div>
        <div>
          <div class="ui left icon input">
            <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class =>'field' %>
            <!-- <input type="password" name="password" placeholder="Password"> -->
          </div>
        </div>
        <div ><%= f.submit 'Log In', :class => 'ui fluid large teal submit button' %></div>
      </div>

      <div class="ui error message"></div>

    <!-- </form> -->
    <% end %>

    <div class="ui message">
      New to us? <a href="#">Sign Up</a>
    </div>
  </div>
</div>